                      <ul class="list-group list-group-flush">
                        <script>
                          // Array containing the text for the far end of each list item
                          const timeArray = ["Today", "Tomorrow", "Yesterday", "This Week", "Last Week"];

                          // Array containing the text for each list item
                          const textForListItems = [
                            "You created Lab: Biology_lab",
                            "You have been removed from Chemistry_lab",
                            "You created Lab: Physics_lab",
                            "You have been added to Computer_lab",
                            "You have been added to Math_lab"
                          ];

                          // Array containing the class names of icons
                          const iconArray = ["fas fa-folder-open", "fas fa-bell", "fas fa-envelope"];

                          // Function to randomly select an icon class from the iconArray
                          function getRandomIcon() {
                            const randomIndex = Math.floor(Math.random() * iconArray.length);
                            return iconArray[randomIndex];
                          }

                         // Function to get the text for each list item based on the current index
                          function getTextForListItem(index) {
                            return textForListItems[index % textForListItems.length];
                          }
                      
                          // Loop through the textArray and generate list items dynamically
                          timeArray.forEach((text, index) => {
                            const randomIcon = getRandomIcon();
                            const textForListItem = getTextForListItem(index);
                            document.write(`
                              <li class="list-group-item d-flex justify-content-between align-items-center" style="padding-left: 0; padding-right: 0;">
                                <div class="d-flex align-items-center">
                                  <i class="${randomIcon}" style="color: #999;"></i>
                                  <span style="margin-left: 20px; font-size: 14.5px;">${textForListItem}</span>
                                </div>
                                <span class="text-primary" style="font-size: small;">${text}</span>
                              </li>
                            `);
                          });
                        </script>
                      </ul>

                    </div>
                </div>
            </div>
        </div>


          <!-- Add more content here if needed -->
        </div>
